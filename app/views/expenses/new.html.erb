<div class="container d-flex flex-column justify-content-center align-items-center">
  <div class="expense-header w-100">
    <h1>
      <%= link_to user_group_expenses_path(@current_user, @group) do %>
        <i class="fa fa-toggle-left" aria-hidden="true" style="color: #3778c2"> </i>
      <% end %>
    </h1>
  </div>
  <div class="card w-100 d-flex justify-content-center align-items-center  p-3 shadow p-3 mb-5 bg-body rounded">
    <h2 class="expense-title">Create New Transaction</h2>
    <%= form_with model: @expense, url: user_group_expenses_path(current_user, @group), method: :post, scope: :expense,  class: 'd-flex flex-column  col-md-5 justify-content-center align-items-center' do |f| %> 
      <div class="input-group p-2 mb-3">
        <%= f.label :name, class: "input-group-text" %><br />
        <%= f.text_field :name,  autofocus: true, autocomplete: "name", class: 'form-control' %>
      </div>

      <div class="input-group p-2 mb-3">
        <%= f.label :amount, class: "input-group-text" %><br />
        <%= f.number_field :amount, class: 'form-control' %>
      </div>

      <div class="input-group p-2 mb-3">
        <%= f.label :group_id, class: "input-group-text" %><br />
        <%= f.collection_select(:group_id, current_user.groups, :id, :name, { prompt: 'Select Category' }, class: 'form-select') %>
      </div>
      
      <div class="actions">
        <%= f.submit "CREATE TRANSACTION", class: 'btn btn-success'%>
      </div>
    <% end %>
  </div>
</div>

